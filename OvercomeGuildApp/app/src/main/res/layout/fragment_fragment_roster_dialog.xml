<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dialogs.RosterDialog">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center"
                android:text="Useraname" />

            <TextView
                android:id="@+id/textView_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center"
                android:text="Email" />

            <TextView
                android:id="@+id/textView_createdat"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center"
                android:text="Created At" />

            <TextView
                android:id="@+id/textView_displayname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center"
                android:text="Display Name" />

            <TextView
                android:id="@+id/textView_rank"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center"
                android:text="Rank" />

            <TextView
                android:id="@+id/textView_role"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center"
                android:text="Role" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_RosterDig_username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center" />

            <TextView
                android:id="@+id/textView_RosterDig_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center" />

            <TextView
                android:id="@+id/textView_RosterDig_createdat"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center" />

            <TextView
                android:id="@+id/textView_RosterDig_displayname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center" />

            <TextView
                android:id="@+id/textView_RosterDig_rank"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center" />

            <TextView
                android:id="@+id/textView_RosterDig_role"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>