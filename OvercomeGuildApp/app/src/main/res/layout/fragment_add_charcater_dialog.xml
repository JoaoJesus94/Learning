<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical"
    tools:context=".dialogs.AddCharcaterDialog">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/editText_addCharacter_charName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="CharName"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText_addCharacter_Level"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Level"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Race" />

    <Spinner
        android:id="@+id/spinner_race"
        android:layout_width="250dp"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Class" />

    <Spinner
        android:id="@+id/spinner_class"
        android:layout_width="250dp"
        android:layout_height="45dp" />

    <EditText
        android:id="@+id/editText_addCharacter_MainSpec"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="MainSpec"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText_addCharacter_OffSpec"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="OffSpec"
        android:inputType="textPersonName" />

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/textView_addCharcater_Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:text="CANCEL"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_addCharacter_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:text="ADD"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>